{
  "compilerOptions": {
    "strict": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noEmit": true,
    "types": ["vitest/globals"],
    "baseUrl": ".",
    "paths": {
          "@/*": ["src/*"],
          "@innobridge/usermanagement": ["./node_modules/@innobridge/usermanagement/dist/index"],
          "@innobridge/lexi": ["./node_modules/@innobridge/lexi/dist/index"],
          "@innobridge/scheduler": ["./node_modules/@innobridge/scheduler/dist/index"],
          "@innobridge/qatar": ["./node_modules/@innobridge/qatar/dist/index"],
    }
  },
  "include": ["src/**/*", "tsup.config.ts", "vitest.config.ts"]
}
